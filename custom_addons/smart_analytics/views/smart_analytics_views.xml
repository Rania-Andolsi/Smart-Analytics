<odoo>
    <record id="view_sales_report_tree" model="ir.ui.view">
        <field name="name">sales.report.tree</field>
        <field name="model">sales.report</field>
        <field name="arch" type="xml">
            <tree string="Sales Report">
                <field name="name"/>
                <field name="total_sales"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="view_sales_report_form" model="ir.ui.view">
        <field name="name">sales.report.form</field>
        <field name="model">sales.report</field>
        <field name="arch" type="xml">
            <form string="Sales Report">
                <group>
                    <field name="name"/>
                    <field name="total_sales"/>
                    <field name="date"/>
                </group>
            </form>
        </field>
    </record>

    <menuitem id="menu_sales_report" name="Sales Reports" parent="sales_team.menu_sales"
              action="action_sales_report"/>

    <record id="action_sales_report" model="ir.actions.act_window">
        <field name="name">Sales Reports</field>
        <field name="res_model">sales.report</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
